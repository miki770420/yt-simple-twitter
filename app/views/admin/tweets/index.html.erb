<div class="container">

  <% @tweets.each do |tweet| %>
    <div class="col-md-6">
      <%= image_tag "http://lorempixel.com/140/140/people", class: "img-responsive img-circle" %>
      <h5><%= link_to tweet.user.name, user_path(tweet.user) %>, <%= tweet.created_at %></h5>
      <p><%= tweet.description %></p>
    </div>
  <% end %>
</div>